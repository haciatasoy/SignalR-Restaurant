@model List<ResultMessageDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
	string durum = "";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesaj İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Mesaj Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Mesajlar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Mail</th>
									<th scope="col">Konu</th>
									<th scope="col">Tarih</th>
									<th scope="col">Göster</th>
									<th scope="col">Durum</th>
									<th scope="col">Gör </th>
									<th scope="col">Sil </th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.NameSurname</td>
										<td>@item.Mail</td>										
										<td>@item.Subject</td>
										<td>@item.MessageSendDate</td>
										@if (item.Status == false)
										{
											durum = "Okunmadı";
										}
										else
										{
											durum = "Okundu";
										}
										<td>@durum</td>
										<td><a href="/MessageAdmin/ViewMessage/@item.MessageID" class="btn btn-outline-primary">Gör</a></td>
										<td><a href="/MessageAdmin/DeleteMessage/@item.MessageID" class="btn btn-outline-danger">Sil</a></td>
@*										<td><a href="/MessageAdmin/NotificationStatusChangeToTrue/@item.NotificationID" class="btn btn-outline-warning">Okundu</a></td>
										<td><a href="/MessageAdmin/NotificationStatusChangeToFalse/@item.NotificationID" class="btn btn-outline-secondary">Okunmadı</a></td>*@
									</tr>
								}
							</tbody>
						</table>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@model UpdateMessageDto
@{
    ViewData["Title"] = "ViewMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="MessageID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="productname">Göndericinin Adını</label>
                                <input type="text" class="form-control" asp-for="NameSurname" id="productname">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="price">Göndericinin Maili </label>
                                <input type="text" class="form-control" asp-for="Mail" id="price">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="imageurl">Mesaj Konusu</label>
                                <input type="text" class="form-control" asp-for="Subject" id="imageurl">
                            </div>
                        </div>
                      
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Mesaj İçeriği</label>
                                <input type="text" class="form-control" asp-for="MessageContent" id="description">
                            </div>
                        </div>
                        <div class="card-action">
                           <a href="/MessageAdmin/Index/" class="btn btn-primary">Mesajlara Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

